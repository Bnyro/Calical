<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TableButtonTheme">
        <item name="materialButtonStyle">@style/OuterButton</item>
    </style>

    <style name="CustomCardCorners" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_custom_corners</item>
    </style>

    <style name="ShapeAppearance_custom_corners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">28dp</item>
        <item name="cornerSizeBottomRight">28dp</item>
    </style>

    <style name="RoundedButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">

        <item name="cornerRadius">60dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">33sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">18dp</item>

    </style>

    <style name="OuterButton" parent="RoundedButton">
        <item name="backgroundTint">?attr/colorOnSecondary</item>
    </style>

    <style name="EqualsButton" parent="RoundedButton">
        <item name="backgroundTint">?attr/colorOnPrimary</item>
    </style>

    <style name="AdvancedButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

</resources>